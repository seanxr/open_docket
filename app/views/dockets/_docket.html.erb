<li>
  <span class="content">
    <%= link_to docket.item.name, item_path(docket.item.id) %> (<%= docket.age %>)
    <% if current_user && current_user.admin? %>
      &nbsp;|&nbsp;<%= link_to "Remove from docket", new_docket_status_path(docket.id) %>
    <% end %>
  </span>
      <span class="content"><%= docket.item.requested_by %></span>
      <span class="content"><%= docket.item.address %></span>
  <% if docket.item.request.size > 200 %>
    <a class="toggle" href="javascript:void(0);">Expand/collapse</a>
    <span class="content"><%= docket.item.request[0..200] %>...</span>
    <span class="contentfull" style="display:none"><%= docket.item.request %></span>
    <% else %>
    <span class="content"><%= docket.item.request %></span>
    <% end %>
<span class="timestamp">
    <%= docket.created_at.strftime("Added %m/%d/%y") %>
  </span>
</li>
